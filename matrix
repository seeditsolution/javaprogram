import java.util.Scanner;
public class College
{
public static void main(String args[]) 
{
Scanner sc=new Scanner(System.in);
int N;
N=sc.nextInt();
boolean b = true;
for (int i = 0; i < N; i++) {
for (int j = 0; j < N; j++) {
if (i == j) {
System.out.print("1 ");
}
else if (b) {
System.out.print("2 ");
b = false;
} 
else 
{
System.out.print("-2 ");
b = true;
}
}
System.out.println();
}
}    
}
